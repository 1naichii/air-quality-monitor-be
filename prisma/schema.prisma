generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model sensor_data {
  id              Int      @id @default(autoincrement())
  air_quality_raw Int // Nilai raw sensor (required)
  reading_time    DateTime @default(now()) @db.Timestamp(6)
  aqi             Int // Nilai AQI yang sudah dikalibrasi (required)
}
